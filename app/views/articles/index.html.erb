<h1>Pagina de listado de articulos</h1>

<table>
    <thead>
        <tr>
            <th>Titulo </th>
            <th>Descripcion </th>
            <th colspan="3">Acciones </th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Mostrar', article_path(article) %></td>
                <td><%= link_to 'Editar', edit_article_path(article)%></td>
                <td><%= link_to 'Borrar', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></td>
            </tr>
        <% end %>
    </tbody>
</table>

    <p>
        <%= link_to 'Crear nuevo articulo',new_article_path%></h3>
    </p>

    <%= link_to 'Ir a la pagina de inicio', root_path %>